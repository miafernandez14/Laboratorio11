<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laboratorio11.Views.Division">
    <ContentPage.Content>
        <StackLayout Padding="12">
            <Entry Placeholder="Valor A" Text="{Binding ValorA}"></Entry>
            <Entry Placeholder="Valor B" Text="{Binding ValorB}"></Entry>
            <Button Text="Dividir" Command="{Binding Dividir}"/>
            <Label  FontSize="Large"
                Text="{Binding ResultadoDivision}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>